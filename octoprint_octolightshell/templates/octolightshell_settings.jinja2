<form class="form-horizontal">
  <h3>OctoLightShell settings</h3>
  <div class="control-group">
    <label class="control-label">{{ _('ON command') }}</label>
    <div class="controls">
      <input type="text" class="input-small" data-bind="value: settings.plugins.octolightshell.on_command">
    </div>
    <label class="control-label">{{ _('OFF command') }}</label>
    <div class="controls">
      <input type="text" class="input-small" data-bind="value: settings.plugins.octolightshell.off_command">
    </div>
  </div>
</form>
